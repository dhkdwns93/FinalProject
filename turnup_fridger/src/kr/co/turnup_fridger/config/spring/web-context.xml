<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

 	
	<context:component-scan base-package="kr.co.turnup_fridger.controller"/>
	<mvc:annotation-driven/>
	
	<!-- multipartResolver 등록  -->
	<bean name="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver"/>
	
	
	<!-- 단순 링크 등록 -->
	<mvc:view-controller path="/index.do" view-name="index"/>
	<!-- 공지사항 목록 페이지 -->
	<mvc:view-controller path="/boardnotice/boardnoticelist.do" view-name="boardnotice/boardnoticelist"/>
	<!-- 공지사항 등록 폼 페이지 -->
	<mvc:view-controller path="/boardnotice/boardnotice_form.do" view-name="boardnotice/boardnotice_form"/>
	<!-- 공지사항 상세페이지 -->
	<mvc:view-controller path="/boardnotice/boardnotice_view.do" view-name="boardnotice/boardnotice_view"/>
	<!-- 공지사항 수정 폼 페이지 -->
	<mvc:view-controller path="/boardnotice/boardnotice_upload.do" view-name="boardnotice/boardnotice_upload"/>	
	<!-- 냉장고 리스트 페이지 (검색) -->
	<mvc:view-controller path="/fridger/list.do" view-name="fridger/list"/>
	<!-- 냉장고 등록 페이지 (검색) -->
	<mvc:view-controller path="/fridger/register_form.do" view-name="fridger/register_form"/>
	<!-- 재료관리 목록 페이지   -->
	<mvc:view-controller path="/irdntManage/irdntList.do" view-name="irdntManage/irdntList"/>
	<!-- 재료관리 등록폼 페이지   -->
	<mvc:view-controller path="/irdntManage/irdnt_form.do" view-name="irdntManage/irdnt_form"/>
	<!-- 나의 식재료 목록 페이지   -->
	<mvc:view-controller path="/myIrdnt/myIrdntList.do" view-name="myIrdnt/myIrdntList"/>
	<!-- 나의 식재료 등록폼 페이지   -->
	<mvc:view-controller path="/myIrdnt/myIrdnt_form.do" view-name="myIrdnt/myIrdnt_form"/>
	
	

	<bean name="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver"
		p:prefix="/WEB-INF/view/"
		p:suffix=".jsp"/>	
		
	<!-- properties파일 등록 -->
	<bean name="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource"
		p:basename="kr.co.turnup_fridger.validation.message.error_message"
		p:defaultEncoding="UTF-8"/>	
</beans>
